<Page
    x:Class="Capítulo_12.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Capítulo_12"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#331700FF"/>
        </Style>
    </Page.Resources>

    <Grid>
        <TextBlock x:Name="MiTexto"
                   Visibility="Collapsed"
                   Margin="339,239,0,0"
                   FontSize="32"
                   FontWeight="Bold"/>
        <TextBox x:Name="MiNombre"
                 Margin="42,306,0,360"
                 Width="508"
                 HorizontalAlignment="Left"/>
        <Button x:Name="MiBoton"
                Margin="640,305,0,0"
                Width="267"
                Height="57"
                Click="MiBoton_Click" VerticalAlignment="Top" Background="#331700FF">
            ¡Pulsar Aquí
        </Button>
        <Button x:Name="MiBoton2"
                Width="267"
                Height="56"
                Margin="640,424,0,0"
                Background="Red" VerticalAlignment="Top">
            Segundo Boton
        </Button>

    </Grid>
</Page>
